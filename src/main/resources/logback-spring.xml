<?xml version="1.0" encoding="UTF-8"?>
<configuration scan="true" scanPeriod="60 seconds" debug="false">
    <property name="app_name" value="aquarius"/>
    <contextName>${app_name}</contextName>

    <!--定义日志控制台输出，格式及打印级别-->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>
                %d{HH:mm:ss.SSS} [%thread] %-5level %logger{60} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!--定义日志文件的日志记录策略（文件名，保留时间），输出格式，打印级别-->
    <property name="LOG_HOME" value="logs"/>
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/aquarius.log.%d{yyyy-MM-dd}</fileNamePattern>
            <maxHistory>30</maxHistory>
        </rollingPolicy>
        <encoder>
            <charset>UTF-8</charset>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{60} - %msg%n</pattern>
        </encoder>
    </appender>

    <!--错误日志发报警邮件,使用163的邮箱-->
    <property name="smtpHost" value="smtp.163.com"/>
    <property name="smtpPort" value="25" />
    <property name="email_from" value="17633182036@163.com"/>
    <property name="username" value="17633182036@163.com"/>
    <property name="password" value="自己的密码"/>
    <property name="email_to" value="651159667@qq.com,17633182036@163.com"/>
    <property name="SSL" value="false" />
    <property name="email_subject" value="aquarius项目异常"/>
    <appender name="errMailer" class="ch.qos.logback.classic.net.SMTPAppender">
        <smtpHost>${smtpHost}</smtpHost>
        <smtpPort>${smtpPort}</smtpPort>
        <username>${username}</username>
        <password>${password}</password>
        <SSL>${SSL}</SSL>
        <asynchronousSending>false</asynchronousSending>
        <to>${email_to}</to>
        <from>${email_from}</from>
        <subject>${email_subject}</subject>
        <layout class="ch.qos.logback.classic.html.HTMLLayout"/>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
    </appender>

    <root level="info">
        <appender-ref ref="FILE"/>
        <appender-ref ref="STDOUT"/>
        <appender-ref ref="errMailer"/>
    </root>


    <!--myibatis log configure-->
    <logger name="com.apache.ibatis" level="INFO"/>
    <logger name="java.sql.Connection" level="INFO"/>
    <logger name="java.sql.Statement" level="INFO"/>
    <logger name="java.sql.PreparedStatement" level="INFO"/>

</configuration>
